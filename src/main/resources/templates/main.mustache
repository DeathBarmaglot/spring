<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/static/css/bootstrap.min.css" crossorigin="anonymous">
    <title>Main</title>
</head>

<body>

<div class="d-flex justify-content-center">
    <h2 class="text-center">List of users</h2>

    <form action="/main/add" method="get">

        <button type="submit" class="btn btn-success mx-4">Add</button>
    </form>

    <form action="/products" method="get">

        <button type="submit" class="btn btn-primary mx-4">Products</button>
    </form>


     <form action="/logout" method="post">

        <input class="btn btn-danger  mx-4" type="submit" value="Sign Out"/>
    </form>

</div>
<table class="table table-striped">
    {{#users}}
    <h3></h3>
        
        <tr>
           <form action="/main/edit/{{id}}?id={{id}}" method="post">

                <td><input style="border: none;" disabled="disabled" type="text" name="id" value="{{id}}"/></td>
                <td><input style="border: none;" type="text" name="username" value="{{username}}"/></td>
                <td><input style="border: none;" disabled="disabled" type="text" name="email" value="{{email}}"/></td>
                <td><input style="border: none;" disabled="disabled" type="text" name="password" value="{{password}}"/></td>
                <td><input style="border: none;" type="text" name="roles" value="{{roles}}"/></td>
                <td><button type="submit" class="btn btn-outline-success float-sm-right">Save</button></td>
            </form>
            <td>
                <form action="/main/remove/{{id}}?id={{id}}" method="post">
                <button type="submit" class="btn btn-outline-danger float-sm-center">Remove</button>
                </form>
            </td>
            <td>
            </td>
        </tr>
    {{/users}}
</table>
<form class="d-flex btn mx-4 float-sm-right" method="post" action="/users/filter">
    <input type="text" name="filter" placeholder="Find ...">
    <button type="submit" class="btn btn-info mx-4">Find</button>
</form>
</body>
</html>